<?xml version="1.0" encoding="utf-8"?>
<!--
    弹出菜单透明模糊背景drawable
    
    设计特点：
    1. 使用layer-list实现多层效果
    2. 阴影层：提供立体感和深度
    3. 主背景层：透明模糊渐变效果
    4. 圆角设计：现代化的视觉风格
    5. 边框效果：增强玻璃质感
    
    技术实现：
    - 两层结构：阴影层 + 主背景层
    - 渐变效果：从上到下的透明度渐变
    - 偏移设计：阴影层偏移2dp创建立体感
    - ARGB颜色：精确控制透明度
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 
        阴影层
        功能：为菜单提供立体感和深度
        特点：偏移2dp，半透明黑色
        效果：模拟真实阴影，增强层次感
    -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <!-- 阴影颜色：19%透明度的黑色 -->
            <solid android:color="#30000000" />
            <!-- 圆角：16dp，与主背景层保持一致 -->
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- 
        主背景层 - 透明模糊效果
        功能：提供菜单的主要背景
        特点：多层渐变，模拟毛玻璃效果
        效果：透明模糊，允许底层内容透出
    -->
    <item android:bottom="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <!-- 
                渐变效果：从上到下的透明度渐变
                起始色：#F0FFFFFF (94%透明度白色)
                中间色：#E8FFFFFF (91%透明度白色)  
                结束色：#E0FFFFFF (88%透明度白色)
                角度：270度（从上到下）
            -->
            <gradient
                android:startColor="#F0FFFFFF"
                android:centerColor="#E8FFFFFF"
                android:endColor="#E0FFFFFF"
                android:angle="270" />
            <!-- 圆角：16dp，现代化设计 -->
            <corners android:radius="16dp" />
            <!-- 
                边框：半透明白色边框
                宽度：1dp
                颜色：#40FFFFFF (25%透明度白色)
                效果：增强玻璃质感，定义边界
            -->
            <stroke
                android:width="1dp"
                android:color="#40FFFFFF" />
        </shape>
    </item>
    
</layer-list>
